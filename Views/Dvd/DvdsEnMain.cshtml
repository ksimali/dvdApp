@model IEnumerable<dvdApp.Models.Dvd>

@{
    ViewData["Title"] = "DvdEnMain";
    var currentUser = User.Identity?.Name;
}
<h1>Affichage de vos DVDs</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Ajout DvD</a>
</p>

<!-- Listing des DVDs en Main -->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().ImagePochette) <!-- Use First() to access the property -->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().TitreFrancais) <!-- Use First() to access the property -->
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var dvd in Model)
            {
                <tr>
                    <td>
                        <img src="@dvd.ImagePochette" alt="pochette_film" width="100" height="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelDvd => dvd.TitreFrancais)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@dvd.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@dvd.Id" class="btn btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@dvd.Id" class="btn btn-danger">Delete</a>
                   </td>
                </tr>         
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">Aucun DVD trouvé.</td>
            </tr>
        }
    </tbody>
</table>
