@model IEnumerable<Dvd>

@{
    ViewData["Title"] = "DVDs Empruntés";
    int count = 0;
}

<h2>DVDs Empruntés par @ViewBag.SelectedUser</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Pochette</th>
                <th>Titre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dvd in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>
                        <img src="@dvd.ImagePochette" alt="pochette_film" width="100" height="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelDvd => dvd.TitreFrancais)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@dvd.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@dvd.Id" class="btn btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@dvd.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <p>Aucun DVD emprunté par cet utilisateur.</p>
}


